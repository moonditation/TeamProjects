<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/go_back"
            android:backgroundTint="#ffffff"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="받은 요청"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:drawableLeft="@drawable/friend_icon_customize"
            android:drawablePadding="-65dp"
            android:paddingLeft="50dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:backgroundTint="#ffffff"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/friend_shape"
                    android:backgroundTint="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름 : 이종민 \n id : ljm_0813"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/check_button"
                    android:backgroundTint="#ffffff"/>


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/x_button"
                    android:backgroundTint="#ffffff"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/friend_shape"
                    android:backgroundTint="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름 : 이우혁 \n id : lwh_0419"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/check_button"
                    android:backgroundTint="#ffffff"/>


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/x_button"
                    android:backgroundTint="#ffffff"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

